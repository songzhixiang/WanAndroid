<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.Guideline
        android:id="@+id/guild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_types"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guild"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/colorDivider"
        app:layout_constraintLeft_toRightOf="@+id/guild"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_navigation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_constraintLeft_toRightOf="@+id/v_line"
        app:layout_constraintRight_toRightOf="parent"/>


    <com.andysong.wanandroid.widget.stateview.StateView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/stateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"  />
</android.support.constraint.ConstraintLayout>